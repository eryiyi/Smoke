<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@null"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
        <ImageView
                android:layout_width="120dp"
                   android:src="@drawable/two_book"
                   android:id="@+id/img_one"
                   android:layout_height="120dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_toRightOf="@+id/img_one"
                  android:text="这是内容这内容内容这是内容"
                  android:singleLine="true"
                  android:layout_marginLeft="6dp"
                  android:ellipsize="end"
                  android:textStyle="bold"
                  android:lineSpacingMultiplier="1.2"
                  android:id="@+id/title"
                  android:layout_marginTop="15dp"
                  android:textColor="@color/textColor"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_below="@+id/title"
                  android:layout_toRightOf="@+id/img_one"
                  android:text="这是内容这是内容这是内容这是容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容"
                  android:layout_marginLeft="6dp"
                  android:ellipsize="end"
                  android:lineSpacingMultiplier="1.2"
                  android:id="@+id/content_one"
                  android:layout_marginTop="5dp"
                  android:textColor="@color/textColor"
                  android:textSize="14sp"
                  android:layout_height="60dp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="点击次数:"
                  android:layout_marginTop="8dp"
                  android:layout_toLeftOf="@+id/click_one"
                  android:layout_below="@+id/content_one"
                  android:textColor="@color/textColor"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="998"
                  android:id="@+id/click_one"
                  android:layout_marginTop="8dp"
                  android:layout_alignParentRight="true"
                  android:layout_below="@+id/content_one"
                  android:textColor="@color/tuizhu_border"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>