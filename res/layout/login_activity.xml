<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/login_backg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/top_backg"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="登录"
                  android:textColor="@color/white"
                  android:gravity="center"
                  android:layout_centerInParent="true"
                  android:textSize="20dp"
                  android:layout_height="wrap_content"/>
        <!--<ImageView android:layout_width="35dp"-->
                   <!--android:layout_centerVertical="true"-->
                   <!--android:layout_alignParentRight="true"-->
                   <!--android:id="@+id/img"-->
                   <!--android:layout_marginRight="8dp"-->
                   <!--android:src="@drawable/main_top_img"-->
                   <!--android:layout_height="35dp"/>-->
        <TextView android:layout_width="wrap_content"
                  android:text="注册"
                  android:layout_marginRight="8dp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/white"
                  android:gravity="center"
                  android:id="@+id/reg"
                  android:layout_centerInParent="true"
                  android:textSize="20dp"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:padding="15dp"
            android:background="@drawable/et_bule_bg"
            android:hint="邮箱"/>

    <Button android:layout_width="match_parent"
            android:background="@drawable/login_top_backg"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:text="登 录"
            android:id="@+id/login_btn"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:layout_height="45dp"/>
    <TextView android:layout_width="match_parent"
              android:text="忘记密码"
              android:layout_marginRight="20dp"
              android:gravity="right"
              android:visibility="gone"
              android:textColor="@color/textColor"
              android:layout_marginTop="15dp"
              android:textSize="14sp"
              android:id="@+id/forget"
              android:layout_height="wrap_content"/>

</LinearLayout>